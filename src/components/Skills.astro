</section>

<style>
	.skills-modern {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		position: relative;
	}

	.skills-modern::before {
		content: '';
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 600px;
		height: 600px;
		background: radial-gradient(circle, var(--accent-overlay) 0%, transparent 70%);
		opacity: 0.2;
		filter: blur(80px);
		pointer-events: none;
		z-index: 0;
		animation: skills-orb 8s ease-in-out infinite;
	}

	@keyframes skills-orb {
		0%, 100% {
			opacity: 0.2;
			transform: translateX(-50%) scale(1);
		}
		50% {
			opacity: 0.4;
			transform: translateX(-50%) scale(1.2);
		}
	}

	.skills-modern > * {
		position: relative;
		z-index: 1;
	}

	.skills-header-modern {
		text-align: center;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		margin-bottom: 2rem;
		position: relative;
		opacity: 0;
		transform: translateY(20px);
		animation: header-fade-in 1s ease-out 0.2s forwards;
	}

	@keyframes header-fade-in {
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.skills-icon-wrapper {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 5rem;
		height: 5rem;
		background: var(--gradient-subtle);
		border-radius: var(--radius-full);
		margin-bottom: 0.5rem;
		position: relative;
		animation: icon-rotate 20s linear infinite;
	}

	.skills-icon-wrapper::before {
		content: '';
		position: absolute;
		inset: -3px;
		border-radius: var(--radius-full);
		background: var(--gradient-accent);
		opacity: 0.3;
		filter: blur(10px);
		z-index: -1;
		animation: icon-glow 3s ease-in-out infinite;
	}

	@keyframes icon-rotate {
		from {
			transform: rotate(0deg);
		}
		to {
			transform: rotate(360deg);
		}
	}

	@keyframes icon-glow {
		0%, 100% {
			opacity: 0.3;
			transform: scale(1);
		}
		50% {
			opacity: 0.5;
			transform: scale(1.1);
		}
	}

	.skills-title {
		font-size: var(--text-3xl);
		margin: 0;
		color: var(--gray-0);
		background: linear-gradient(135deg, var(--gray-0) 0%, var(--accent-regular) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		background-size: 200% 200%;
		animation: title-gradient 5s ease infinite;
		position: relative;
	}

	.skills-subtitle {
		font-size: var(--text-lg);
		color: var(--gray-300);
		max-width: 60ch;
		margin: 0;
		line-height: 1.6;
		opacity: 0;
		animation: subtitle-fade-in 1s ease-out 0.4s forwards;
	}

	@keyframes subtitle-fade-in {
		to {
			opacity: 1;
		}
	}

	.skills-visual-modern {
		display: flex;
		justify-content: center;
		margin: 1.5rem 0;
	}

	.skills-image-container {
		position: relative;
		border-radius: var(--radius-xl);
		overflow: hidden;
		box-shadow: var(--shadow-lg);
		background: var(--gradient-card);
		padding: 1.5rem;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		opacity: 0;
		transform: translateY(30px) scale(0.95);
		animation: image-fade-in 1s ease-out 0.6s forwards;
	}

	@keyframes image-fade-in {
		to {
			opacity: 1;
			transform: translateY(0) scale(1);
		}
	}

	.skills-image-container::before {
		content: '';
		position: absolute;
		inset: 0;
		background: var(--gradient-accent);
		opacity: 0;
		transition: opacity 0.4s ease;
		z-index: 1;
		pointer-events: none;
		border-radius: var(--radius-xl);
	}

	.skills-image-container:hover {
		transform: translateY(-8px) scale(1.02);
		box-shadow: var(--shadow-xl), 0 0 40px rgba(102, 126, 234, 0.3);
	}

	.skills-image-container:hover::before {
		opacity: 0.1;
	}

	.skills-image {
		max-width: 100%;
		height: auto;
		border-radius: var(--radius-md);
		display: block;
		position: relative;
		z-index: 2;
		transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.skills-image-container:hover .skills-image {
		transform: scale(1.05);
	}

	.skills-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.5rem;
	}

	.skill-card:nth-child(1) {
		animation-delay: 0.1s;
	}

	.skill-card:nth-child(2) {
		animation-delay: 0.2s;
	}

	.skill-card:nth-child(3) {
		animation-delay: 0.3s;
	}

	.skill-card:nth-child(4) {
		animation-delay: 0.4s;
	}

	.skill-card {
		background: var(--gradient-card);
		border: 1px solid var(--gray-800);
		border-radius: var(--radius-xl);
		padding: 1.5rem;
		box-shadow: var(--shadow-md);
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
		opacity: 0;
		transform: translateY(30px) scale(0.95) rotateX(5deg);
		animation: card-fade-in 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
		transform-style: preserve-3d;
		perspective: 1000px;
	}

	.skill-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: var(--gradient-accent);
		opacity: 0;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: 0 0 20px rgba(102, 126, 234, 0.5);
		transform: scaleX(0);
		transform-origin: left;
	}

	.skill-card::after {
		content: '';
		position: absolute;
		inset: 0;
		background: radial-gradient(circle at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(102, 126, 234, 0.1) 0%, transparent 50%);
		opacity: 0;
		transition: opacity var(--theme-transition);
		pointer-events: none;
	}

	.skill-card:hover {
		transform: translateY(-12px) scale(1.04) rotateX(-2deg);
		box-shadow: var(--shadow-xl), var(--shadow-glow), 0 0 50px rgba(102, 126, 234, 0.3), 0 20px 60px rgba(0, 0, 0, 0.3);
		border-color: var(--accent-regular);
		background: rgba(255, 255, 255, 0.1);
	}

	.skill-card:hover::before {
		opacity: 1;
		box-shadow: 0 0 40px rgba(102, 126, 234, 0.9);
		transform: scaleX(1);
	}

	.skill-card:hover::after {
		opacity: 1;
	}

	.skill-card-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1.5rem;
		position: relative;
	}

	.skill-icon-wrapper {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 4rem;
		height: 4rem;
		background: var(--gradient-subtle);
		border-radius: var(--radius-lg);
		position: relative;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		border: 2px solid transparent;
		animation: icon-pulse 3s ease-in-out infinite;
	}

	@keyframes icon-pulse {
		0%, 100% {
			box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.4);
		}
		50% {
			box-shadow: 0 0 0 8px rgba(102, 126, 234, 0);
		}
	}

	.skill-icon-wrapper::before {
		content: '';
		position: absolute;
		inset: -3px;
		background: var(--gradient-accent);
		border-radius: var(--radius-lg);
		opacity: 0;
		filter: blur(12px);
		transition: opacity var(--theme-transition);
		z-index: -1;
	}

	.skill-icon-wrapper::after {
		content: '';
		position: absolute;
		inset: 0;
		background: var(--gradient-accent);
		border-radius: var(--radius-lg);
		opacity: 0;
		transition: opacity var(--theme-transition);
		z-index: 0;
	}

	.skill-card:hover .skill-icon-wrapper {
		transform: scale(1.2) rotate(15deg);
		border-color: var(--accent-regular);
		box-shadow: 0 0 35px rgba(102, 126, 234, 0.6), 0 0 60px rgba(102, 126, 234, 0.3);
		animation: none;
	}

	.skill-card:hover .skill-icon-wrapper::before {
		opacity: 0.6;
	}

	.skill-card:hover .skill-icon-wrapper::after {
		opacity: 0.1;
	}

	.skill-icon-wrapper :global(svg) {
		position: relative;
		z-index: 1;
	}

	@keyframes card-fade-in {
		to {
			opacity: 1;
			transform: translateY(0) scale(1) rotateX(0deg);
		}
	}

	.skill-icon-wrapper :global(svg) {
		transition: transform var(--theme-transition);
	}

	.skill-card:hover .skill-icon-wrapper :global(svg) {
		transform: scale(1.2) rotate(10deg);
	}

	.skill-card-header h3 {
		font-size: var(--text-xl);
		margin: 0;
		color: var(--gray-0);
		font-weight: 700;
		background: linear-gradient(135deg, var(--gray-0) 0%, var(--accent-regular) 50%, var(--gray-0) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		background-size: 200% 200%;
		animation: title-gradient 5s ease infinite;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		display: inline-block;
	}

	.skill-card-header h3::after {
		content: '';
		position: absolute;
		bottom: -4px;
		left: 0;
		width: 0;
		height: 3px;
		background: var(--gradient-accent);
		border-radius: var(--radius-sm);
		transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
	}

	.skill-card:hover .skill-card-header h3::after {
		width: 100%;
	}

	.skill-card:hover .skill-card-header h3 {
		transform: translateX(8px) scale(1.02);
		filter: drop-shadow(0 0 15px rgba(102, 126, 234, 0.6));
	}

	.skill-content {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}

	.skill-category {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		padding: 1.25rem;
		background: rgba(255, 255, 255, 0.02);
		border-radius: var(--radius-md);
		border: 1px solid var(--gray-800);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: visible;
		backdrop-filter: blur(5px);
		-webkit-backdrop-filter: blur(5px);
	}

	.skill-category::after {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
		transition: left 0.5s ease;
	}

	.skill-category:hover::after {
		left: 100%;
	}

	.skill-category::before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		bottom: 0;
		width: 3px;
		background: var(--gradient-accent);
		opacity: 0;
		transition: opacity var(--theme-transition);
	}

	.skill-category:hover {
		background: rgba(255, 255, 255, 0.08);
		border-color: var(--accent-regular);
		transform: translateX(10px) translateY(-3px);
		box-shadow: 0 6px 25px rgba(102, 126, 234, 0.3), 0 0 40px rgba(102, 126, 234, 0.1);
	}

	.skill-category:hover::before {
		opacity: 1;
	}

	.category-label {
		font-size: var(--text-sm);
		font-weight: 700;
		color: var(--gray-200);
		text-transform: uppercase;
		letter-spacing: 0.1em;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 0.5rem;
		position: relative;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.category-label::before {
		content: '▸';
		font-size: 0.8em;
		color: var(--accent-regular);
		opacity: 0;
		transform: translateX(-10px);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.category-label::after {
		content: '';
		position: absolute;
		bottom: -4px;
		left: 0;
		width: 0;
		height: 2px;
		background: var(--gradient-accent);
		transition: width 0.3s ease;
	}

	.skill-category:hover .category-label {
		color: var(--accent-regular);
		transform: translateX(5px);
	}

	.skill-category:hover .category-label::before {
		opacity: 1;
		transform: translateX(0);
	}

	.skill-category:hover .category-label::after {
		width: 100%;
	}

	.tech-badges {
		display: flex;
		flex-wrap: wrap;
		gap: 0.625rem;
		align-items: center;
		position: relative;
		z-index: 1;
	}

	.tech-badge {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.5rem 1rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: var(--radius-full);
		font-size: var(--text-sm);
		font-weight: 600;
		color: var(--gray-200);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
		cursor: default;
		opacity: 0;
