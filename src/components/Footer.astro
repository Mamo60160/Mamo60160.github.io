---
import Icon from './Icon.astro';
const currentYear = new Date().getFullYear();
---

<footer>
	<div class="footer-content">
		<div class="footer-main">
			<p class="footer-text">
				Conçu et développé avec <a href="https://astro.build/" target="_blank" rel="noopener noreferrer">Astro</a>
				<Icon icon="rocket-launch" size="1.2em" />
			</p>
			<p class="footer-copyright">&copy; {currentYear} Mehmet Alkaya. Tous droits réservés.</p>
		</div>
		<div class="footer-socials">
			<a href="https://github.com/Mamo60160" target="_blank" rel="noopener noreferrer" class="social-link">
				<Icon icon="github-logo" size="1.5em" />
				<span>GitHub</span>
			</a>
			<a href="https://www.linkedin.com/in/mehmet-alkaya" target="_blank" rel="noopener noreferrer" class="social-link">
				<Icon icon="linkedin-logo" size="1.5em" />
				<span>LinkedIn</span>
			</a>
		</div>
	</div>
</footer>
<style>
	footer {
		margin-top: auto;
		padding: 4rem 0;
		border-top: 1px solid var(--gray-800);
		background: var(--gradient-subtle);
		position: relative;
		overflow: hidden;
	}

	footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: var(--gradient-accent);
		opacity: 0.5;
		animation: footer-line 3s ease-in-out infinite;
	}

	@keyframes footer-line {
		0%, 100% {
			opacity: 0.5;
			transform: scaleX(1);
		}
		50% {
			opacity: 1;
			transform: scaleX(1.1);
		}
	}

	.footer-content {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		align-items: center;
		text-align: center;
	}

	.footer-main {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.footer-text {
		color: var(--gray-300);
		font-size: var(--text-sm);
		margin: 0;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.footer-text a {
		color: var(--accent-regular);
		text-decoration: none;
		font-weight: 600;
		transition: color var(--theme-transition);
	}

	.footer-text a:hover,
	.footer-text a:focus {
		color: var(--accent-dark);
		text-decoration: underline;
		text-underline-offset: 0.25em;
	}

	.footer-copyright {
		color: var(--gray-400);
		font-size: var(--text-sm);
		margin: 0;
	}

	.footer-socials {
		display: flex;
		gap: 1.5rem;
		align-items: center;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--gray-300);
		text-decoration: none;
		font-size: var(--text-sm);
		font-weight: 500;
		padding: 0.5rem 1rem;
		border-radius: var(--radius-md);
		transition: all var(--theme-transition);
		position: relative;
		overflow: hidden;
	}

	.social-link::before {
		content: '';
		position: absolute;
		inset: 0;
		background: var(--gradient-accent);
		opacity: 0;
		transition: opacity var(--theme-transition);
		z-index: 0;
	}

	.social-link span,
	.social-link :global(svg) {
		position: relative;
		z-index: 1;
	}

	.social-link:hover,
	.social-link:focus {
		color: var(--accent-text-over);
		transform: translateY(-3px) scale(1.05);
		box-shadow: var(--shadow-md);
	}

	.social-link:hover::before,
	.social-link:focus::before {
		opacity: 0.2;
	}

	.social-link :global(svg) {
		transition: transform var(--theme-transition);
	}

	.social-link:hover :global(svg),
	.social-link:focus :global(svg) {
		transform: scale(1.2) rotate(360deg);
	}

	@media (min-width: 50em) {
		footer {
			padding: 5rem 0;
		}

		.footer-content {
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
			text-align: left;
		}

		.footer-main {
			align-items: flex-start;
		}

		.footer-text {
			justify-content: flex-start;
		}

		.footer-socials {
			gap: 1rem;
		}
	}
</style>
